# Medster Environment Configuration

# Anthropic API Key (required for Claude Sonnet 4.5)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Coherent Data Set Configuration - LOCAL DEVELOPMENT
# Download 9GB dataset from: https://synthea.mitre.org/downloads
# Contains FHIR, DICOM, genomics, ECGs, and clinical notes all linked together
COHERENT_DATA_PATH=./coherent_data/fhir
COHERENT_DICOM_PATH=./coherent_data/dicom
COHERENT_CSV_PATH=./coherent_data/csv
COHERENT_DNA_PATH=./coherent_data/dna

# Google Cloud Storage Configuration - CLOUD RUN DEPLOYMENT
# Set USE_GCS=true when deployed to Cloud Run
# Data is stored in gs://medster-coherent-data/{fhir,dicom,csv,dna}
USE_GCS=false
GCS_COHERENT_BUCKET=medster-coherent-data

# MCP Medical Analysis Server (optional - your FastMCP server)
# For complex document analysis using recursive AI architecture
# Deploy your own FastMCP server or leave blank to disable MCP features
MCP_SERVER_URL=<YOUR_MCP_SERVER_URL>
MCP_API_KEY=<YOUR_MCP_API_KEY>
MCP_DEBUG=false

# Frontend Configuration (for Next.js)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXTAUTH_SECRET=<YOUR_NEXTAUTH_SECRET>
NEXTAUTH_URL=http://localhost:3000
